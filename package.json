{
	"name": "boilerplate",
	"description": "my boilerplate based on gulp, rollup, babel and esLint",
	"version": "1.7.0",
	"author": "misioq23",
	"license": "MIT",
	"repository": "https://github.com/misioq23/boilerplate",
	"dependencies": {
		"core-js": "^3.6.1"
	},
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@babel/preset-env": "^7.7.7",
		"browser-sync": "^2.26.7",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-plugin-prettier": "^3.1.2",
		"esm": "^3.2.25",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^7.0.1",
		"gulp-clean-css": "^4.2.0",
		"gulp-htmlmin": "^5.0.1",
		"gulp-sass": "^4.0.2",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-terser": "^1.2.0",
		"husky": "^3.1.0",
		"lint-staged": "^9.5.0",
		"prettier": "^1.19.1",
		"rollup": "^1.27.14",
		"rollup-plugin-babel": "^4.3.3",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-replace": "^2.2.0",
		"stylelint": "^12.0.1",
		"stylelint-config-standard": "^19.0.0"
	},
	"scripts": {
		"start": "gulp",
		"build": "gulp build",
		"bundle": "rollup -c config/rollup/rollup.config.js",
		"lint:js": "eslint \"src/js/**\" --config config/eslint/.eslintrc.json --fix"
	},
	"browserslist": [
		"chrome > 74"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --config config/eslint/.eslintrc.json --fix",
			"git add"
		],
		"*.{css,scss}": [
			"stylelint --config config/stylelint/.stylelintrc --fix",
			"git add"
		]
	}
}
